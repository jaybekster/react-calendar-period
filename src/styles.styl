$cell-height = 25px
$cell-width = 25px

.calendar-period
    position: relative
    display inline-block

    &__navigation
        -webkit-user-select: none
        position absolute
        left 0
        right 0
        z-index 1

    &__arrow
        cursor: pointer

        &_prev
            float left

            &:after
                content "\3c";

        &_next
            float right

            &:after
                content "\3e"

.calendar
    cursor: default
    font-size: 0
    display: inline-block
    vertical-align: top
    user-select: none
    -webkit-user-select: none
    position: relative
    z-index: 0

    &__title
        text-align: center
        margin: 0 0 15px
        font-size: 14px

        &__month
            text-transform: capitalize

    &__dayname
    &__date
        width: $cell-width
        height: $cell-height
        display: inline-block
        text-align: center

    &__date
        line-height: $cell-height

    &__dayname
        font-size: 10px
        text-transform: uppercase

    &__date
        font-size: 14px

        &_selected
            background-image: linear-gradient(to right, #d9f3ff 0, #d9f3ff 100%)

        &_selecting
            background-image: linear-gradient(to right, #80d5ff 0, #80d5ff 100%)

        &_removing
            background-image: linear-gradient(to right, #fb4b5b 0, #fb4b5b 100%)

        &_outer
            opacity 0

        &_past
            color: #858585

        &_availiable
            cursor: pointer

    & + &
        margin-left: 34px
